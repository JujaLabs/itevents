<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
        </Console>

        <File name="DebugLog" fileName="logs/debug.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

        <File name="FatalLog" fileName="logs/fatal.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>

        <Async name="Debug">
            <AppenderRef ref="DebugLog"/>
        </Async>

        <Async name="Fatal">
            <AppenderRef ref="FatalLog"/>
        </Async>

    </Appenders>

    <Loggers>

        <!-- Logging to CONSOLE and share FILE -->
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="Debug"/>
        </Root>

    </Loggers>

</Configuration>